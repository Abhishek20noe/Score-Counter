    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/runsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/sixRun"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/sixrun"/>

                <ImageView
                    android:id="@+id/fourRun"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/fourrun"/>

                <ImageView
                    android:id="@+id/threeRun"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/threerun"/>

                <ImageView
                    android:id="@+id/twoRun"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/tworun"/>

                <ImageView
                    android:id="@+id/oneRun"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/onerun"/>

                <ImageView
                    android:id="@+id/zeroRun"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.08"
                    android:src="@drawable/zerorun"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventRow"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/noBall"
                    android:src="@drawable/noballum"
                    android:layout_marginHorizontal="2dp"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/legBye"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/legbye"/>

                <ImageView
                    android:id="@+id/out"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="64dp"
                    android:layout_weight="1.1"
                    android:src="@drawable/out"/>

                <ImageView
